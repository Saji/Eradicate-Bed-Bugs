!!! 5
%html
  %head
    %title
      Bed Bugs, Bed bug Dog, Extermination | Eradicate Bed Bugs
    %link{:rel => :stylesheet, :type => 'text/css', :href => './style.css'}
    %script{:src => './js/jquery.js'}
    %script{:src => './js/jquery-cycle.js'} 
    %script{:src => './js/script.js'}
  %body
    %header
      %hgroup
        %h1 Eradicate Bed Bugs
        %img{:src => './images/bed-bug.png'}
      %ul.images
        - (1..3).each do |i|
          %li
            %img{:src => "./images/nature/#{i}.jpg"}
      %p.contact
        %span.phone-number
          347 824 2066
        %span.pitch
          = lorem('words', 10)
    #body-copy
      %nav
        %a{:href => '/'} home
        %ul.pages
          - (nav).each do |page, sections|
            %li.page
              %a{:href => page.split.map { |x| x.downcase }.join('-')} #{page}
              %ul.sections
                - sections.each do |section|
                  %li.section
                    %a{:href => "#{page.downcase}\##{section}"} #{section.to_s.split('-').map { |x| x.capitalize }.join(' ')}
      %section.content
        %header
          // visual
        %section#one
          = yield
    %footer
      Eradicate Bed Bugs | EradicateBedBugs.com
